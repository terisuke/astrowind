---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="料金システム"
    title="選べる最適な価格設定"
    subtitle="月額or買い切りなので初期費用は不要&月額契約も1年以降はいつでも解約可能！"
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="料金プラン(税抜)"
    subtitle="必要なサービスを納得の価格で"
    prices={[
      {
        title: 'ホームページ制作・管理',
        subtitle: '最初のステップとして',
        price: '6000~',
        period: '/月額',
        items: [
          {
            description: 'Top+4ページまで¥6000',
          },
          {
            description: '追加1ページごとに +¥1000/月(税抜)',
          },
          {
            description: '使用する画像がない場合弊社でテンプレートを用意',
          },
          {
            description: '内容更新無料(ブログ記事追加・サイト大幅更新は除く)',
          },
          {
            description: '独自ドメイン取得代行可(追加料金不要)',
          },
          {
            description: '契約1年以降はいつでも解約可能',
          },
        ],
        callToAction: {
          target: '_blank',
          text: '申し込む',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'recommended',
      },
      {
        title: 'デジタル名刺提供',
        subtitle: '忘れられない印象を与える',
        price: 3000,
        period: '/枚',
        items: [
          {
            description: '2枚目以降は¥1000/枚',
          },
          {
            description: 'レイアウトは弊社でデザイン代行可',
          },
          {
            description: 'VR名刺も対応可(3Dデータ提供必要)',
          },
          {
            description: 'データ内容は購入後1年は無料で変更',
          },
        ],
        callToAction: {
          target: '_blank',
          text: '申し込む',
          href: '#',
        },
      },
      {
        title: 'AIボットアプリ提供',
        subtitle: '24時間365日高い品質の顧客対応を',
        price: 3000,
        period: '/月額',
        items: [
          {
            description: 'AIの追加学習可能(無料)',
          },
          {
            description: '学習データ形式、量は無制限',
          },
          {
            description: '追加でエージェントを作成する場合は¥1500/月',
          },
          {
            description: 'API料金は一切負担なし',
          },
          {
            description: 'LINEなど他SNSとの連携も応相談',
          },
        ],
        callToAction: {
          target: '_blank',
          text: '申し込む',
          href: '#',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="料金設定に関して"
    subtitle="すべてシンプルなワンプラン！"
    columns={2}
    items={[
      {
        title: 'わかりやすい料金設定',
        description:
          '各プランにはすべて初期費用・製作費用・月額費用・保守費用などが含まれています。余計な費用がかからないので安心して契約できます',
        icon: 'tabler:stairs',
      },
      {
        title: 'まとめて契約するとよりお得に',
        description:
          '2つ以上のサービスをまとめてご契約いただくと、合計金額から10%オフ!<br />(サブスクリプションの場合は毎月のお支払いが10%オフ)',
        icon: 'tabler:flip-vertical',
      },
      {
        title: '万全のセキュリティ',
        description:
          'すべてのサービスに関わる情報をまとめて管理するので情報管理は楽々♪Google Cloud Platformを使用しているので常に最新のセキュリティ対策をとっています',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'オプション追加も可能',
        description: `必要に応じて随時プランを柔軟に変更可能！ユーザーに寄り添ったサービスを心がけています。`,
        icon: 'tabler:accessible',
      },
      {
        title: '最新のシステムに自動アップデート',
        description: '新しいリリースの度にシステムを更新！常に最新の技術を使って質の高いサービスを提供していきます。',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '素早く丁寧なサポート',
        description:
          '24時間対応しているAIチャットをはじめ、様々な方法でサポートを提供しています。お客様のご要望にお応えします！',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="サービスの流れ"
    tagline="通常、契約からサービス提供開始まで1ヶ月ほどです。"
    isReversed={true}
    items={[
      {
        title: 'プランを比較する',
        icon: 'tabler:number-1',
      },
      {
        title: 'お申し込み',
        icon: 'tabler:number-2',
      },
      {
        title: 'AIを用いたお打ち合わせ',
        icon: 'tabler:number-3',
      },
      {
        title: 'お申し込みプランの確認',
        icon: 'tabler:number-4',
      },
      {
        title: '契約・(必要な場合)追加のお打ち合わせ',
        icon: 'tabler:number-5',
      },
      {
        title: 'サービスのテスト提供・動作確認',
        icon: 'tabler:number-6',
      },
      {
        title: 'リリース！(契約から通常1ヶ月程度)',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="FAQ"
    subtitle="適正なプランを決定する際に参考になるような質問と回答を掲載しています。"
    columns={1}
    items={[
      {
        title: '支払い方法はどのようなものがありますか？',
        description: 'クレジットカード、銀行振込、PayPalなど、多様な支払い方法を受け付けています。',
      },
      {
        title: '初期費用はかかりますか？',
        description: 'いいえ、初期費用は不要です。すべてのプランは月額料金のみです。',
      },
      {
        title: '月額料金の請求サイクルはどうなっていますか？',
        description: '月額料金は月末締め、翌月末に請求されます。',
      },
      {
        title: '料金に含まれるサービスは何ですか？',
        description: '各プランには、制作、管理、更新、サポートなどの全サービスが含まれています。',
      },
      {
        title: '追加オプションの料金はどうなっていますか？',
        description: '必要に応じてプランに追加オプションを選択できます。具体的な料金はサービスの詳細欄を確認の上お問い合わせください。',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="何か不明な点はありましたか?"
    subtitle="下記コンタクトフォームからお気軽にご相談ください！"
    actions={[
      {
        variant: 'primary',
        text: 'お問い合わせ',
        href: '/contact',
      },
    ]}
  />
</Layout>
