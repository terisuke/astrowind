---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'プレローンチランディングページ',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="プレローンチデモ"
    title="プレローンチランディングページ：大公開前に盛り上がりを作り出そう！"
    subtitle="訪問者があなたのローンチを心待ちにする、魅力的な「近日公開」または「プレローンチ」ランディングページを作成します。"
    actions={[
      { variant: 'primary', text: 'アクションを呼びかける', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'もっと詳しく', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1558803116-c1b4ac867b31?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2069&q=80',
      alt: '「近日公開」の看板がある店舗。プレローンチランディングページ',
    }}
  />

  <CallToAction
    title="近日公開"
    subtitle="これらのデモページのコンテンツを作成中です。もうすぐご覧いただけますので、お待ちください！"
    actions={[
      {
        variant: 'primary',
        text: 'Download Template',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
