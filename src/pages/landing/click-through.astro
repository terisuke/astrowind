---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Click-through Landing Page Demo',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="クリックスルーデモ"
    title="クリックスルーランディングページ：変換への完璧な橋渡し！"
    subtitle="メインオファーへ訪問者をスムーズに誘導するクリックスルーランディングページの設計方法を学びましょう。"
    actions={[
      { variant: 'primary', text: 'アクションを呼びかける', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'もっと詳しく', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1516321497487-e288fb19713f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90�-pYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'クリックスルーランディングページのヒーロー画像',
    }}
  />

  <CallToAction
    title="近日公開"
    subtitle="これらのデモページのコンテンツを作成中です。もうすぐご覧いただけますので、お待ちください！"
    actions={[
      {
        variant: 'primary',
        text: 'Download Template',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
