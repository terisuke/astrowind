---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Subscription Landing Page Demo',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="サブスクリプションランディングデモ"
    title="サブスクリプションランディングページ：一般訪問者を忠実な購読者に変える！"
    subtitle="視聴者が何度も戻ってくるサブスクリプションランディングページの秘訣を解き明かす。"
    actions={[
      { variant: 'primary', text: 'アクションを呼びかける', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'もっと詳しく', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1593510987046-1f8fcfc512a0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'サブスクリプションのキャンセルに関連する皮肉な画像。サブスクリプションランディングページデモ',
    }}
  />

  <CallToAction
    title="近日公開"
    subtitle="これらのデモページのコンテンツを現在作成中です。もうすぐご覧いただけますので、お待ちください！"
    actions={[
      {
        variant: 'primary',
        text: 'Download Template',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
