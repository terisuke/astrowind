---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Sales Landing Page Demo',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="ロングフォームセールスデモ"
    title="ロングフォームセールス：ストーリーで売る、ロングフォーム方式！"
    subtitle="語りかけ、説得し、変換するランディングページを深く掘り下げて作成します。"
    actions={[
      { variant: 'primary', text: 'アクションを呼びかける', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'もっと詳しく', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1621452773781-0f992fd1f5cb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1626&q=80',
      alt: '子供たちが物語を語っている。ロングフォームセールスランディングページデモ',
    }}
  />

  <CallToAction
    title="近日公開"
    subtitle="これらのデモページのコンテンツを現在作成中です。もうすぐご覧いただけますので、お待ちください！"
    actions={[
      {
        variant: 'primary',
        text: 'Download Template',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
