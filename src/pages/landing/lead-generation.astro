---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Lead Generation Landing Page Demo',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="リード獲得ランディングデモ"
    title="効果的なリード獲得ランディングページ：秘密を解き明かす"
    subtitle="好奇心旺盛な訪問者を熱心なリードに変えるランディングページを作成する秘密を発見しましょう。（あなたのヒーローは即座に注目を集めるべきです。ターゲットオーディエンスに直接語りかける強力な見出しを使用してください。）"
    actions={[
      { variant: 'primary', text: 'アクションを呼びかける', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'もっと詳しく', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1597423498219-04418210827d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90o1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1674&q=80',
      alt: 'ネジを引き寄せる磁石。リード獲得ランディングページデモ',
    }}
  />

  <CallToAction
    title="近日公開"
    subtitle="これらのデモページのコンテンツを現在作成中です。もうすぐご覧いただけます。お楽しみに！"
    actions={[
      {
        variant: 'primary',
        text: 'Download Template',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
